{
  "name": "ssr",
  "version": "2.1.0",
  "description": "Setting a directory to a static server.",
  "bin": {
    "ssr": ".bin/ssr"
  },
  "main": "lib/server.js",
  "scripts": {
    "prepare": "npm run build",
    "type-check": "tsc --noEmit",
    "build": "npm run copy && npm run tsc && npm run build:types",
    "copy": "copyfiles -f src/utils/*.ejs lib/utils",
    "build:types": "tsc -p ./ -t es2015 --types --emitDeclarationOnly --outDir lib",
    "tsc": "tsc --removeComments -p ./ --types --outDir lib",
    "start": "npm run tsc -- --watch & npm run type-check -- --watch"
  },
  "keywords": [
    "ssr",
    "server",
    "iserver",
    "command",
    "cli",
    "parsing",
    "parser",
    "option",
    "args",
    "argument",
    "tool"
  ],
  "files": [
    "lib",
    ".bin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jaywcjlove/ssr.git"
  },
  "author": "kenny wang <wowohoo@qq.com>",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.0.0",
    "ejs": "^2.6.1",
    "fs-extra": "^7.0.1",
    "get-port": "^5.0.0",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "@types/ejs": "^2.6.3",
    "@types/fs-extra": "^5.0.5",
    "@types/node": "^11.13.7",
    "@types/yargs": "^13.0.0",
    "copyfiles": "^2.1.0",
    "typescript": "^3.4.5"
  }
}
